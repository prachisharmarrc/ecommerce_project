<h1><%= @product.product_name %></h1>
<p><%= @product.description %></p>
<p><%= number_to_currency(@product.price) %></p>
<% if @product.image.attached? %>
  <%= image_tag url_for(@product.image), alt: @product.product_name, style: "width: 150px; height: auto;" %>
<% end %>
<p>Categories:</p>
<ul>
  <% @product.categories.each do |category| %>
    <li><%= link_to category.category_name, category_path(category) %></li>
  <% end %>
</ul>
<%= form_with url: add_product_cart_path(product_id: @product.id), method: :post, local: true do %>
  <%= submit_tag "Add to Cart" %>
<% end %>
