<div class="bg-white rounded-lg shadow-lg p-8">
 

<h1 class="text-4xl font-bold mb-4"><%= @product.product_name %></h1>
<p class="text-lg mb-4"><%= @product.description %></p>
<p class="text-2xl font-semibold mb-4"><%= number_to_currency(@product.price) %></p>
<% if @product.image.attached? %>
  <%= image_tag url_for(@product.image), alt: @product.product_name, class: "w-full h-auto mb-4" %>
<% end %>
<%= form_with url: add_product_cart_path(product_id: @product.id), method: :post, local: true do %>
  <%= submit_tag "Add to Cart", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-transform duration-300 transform hover:scale-105" %>
<% end %>
</div>
