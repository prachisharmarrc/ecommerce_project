<div class="bg-white rounded-lg shadow-lg p-8">
  <h1 class="text-3xl font-bold mb-4 text-indigo-600"><%= @product.product_name %></h1>
  <p class="text-gray-700 mb-4"><%= @product.description %></p>
  <p class="text-xl font-semibold text-gray-900 mb-4"><%= number_to_currency(@product.price) %></p>
  <% if @product.image.attached? %>
    <%= image_tag url_for(@product.image), alt: @product.product_name, class: "w-64 h-auto mb-4 mx-auto rounded-md" %>
  <% end %>
  <p class="text-lg font-semibold mb-2">Categories:</p>
  <ul class="list-disc pl-5 mb-6">
    <% @product.categories.each do |category| %>
      <li><%= link_to category.category_name, category_path(category), class: "text-indigo-600 hover:text-indigo-400" %></li>
    <% end %>
  </ul>
  <%= form_with url: add_product_cart_path(product_id: @product.id), method: :post, local: true do %>
    <%= submit_tag "Add to Cart", class: "w-full inline-flex items-center justify-center px-4 py-2 border border-black text-sm font-medium rounded-md shadow-sm text-black bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  <% end %>
</div>
