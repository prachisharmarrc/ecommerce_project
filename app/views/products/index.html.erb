<h1 class="text-4xl font-bold mb-8 text-center text-indigo-600">Products</h1>

<%= form_with url: products_path, method: :get, local: true, class: "mb-8 flex flex-col md:flex-row items-center justify-center space-y-4 md:space-y-0 md:space-x-4" do %>
  <div>
    <%= label_tag :keyword, 'Search by keyword:', class: "block text-gray-700 font-semibold" %>
    <%= text_field_tag :keyword, params[:keyword], class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>
  <div>
    <%= label_tag :category_id, 'Filter by category:', class: "block text-gray-700 font-semibold" %>
    <%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :category_name, params[:category_id]), include_blank: 'All Categories', class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>
  <div>
    <%= label_tag :filter, 'Filter by:', class: "block text-gray-700 font-semibold" %>
    <%= select_tag :filter, options_for_select([['On Sale', 'on_sale'], ['New', 'new'], ['Recently Updated', 'recently_updated']], params[:filter]), include_blank: 'None', class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>
  <div>
    <%= submit_tag 'Search', class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-black bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @products.each do |product| %>
    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <% if product.image.attached? %>
        <%= image_tag(product.image, alt: product.product_name, class: "w-full h-48 object-cover") %>
      <% end %>
      <div class="p-6">
        <h2 class="text-xl font-bold text-gray-900 hover:text-indigo-600 transition-colors duration-300 mb-2"><%= link_to product.product_name, product_path(product) %></h2>
        <p class="text-gray-700 mb-4"><%= product.description %></p>
        <p class="text-lg font-semibold text-gray-900 mb-4"><%= number_to_currency(product.price) %></p>
        <%= form_with url: add_product_cart_path(product_id: product.id), method: :post, local: true do %>
          <%= submit_tag "Add to Cart", class: "w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-black bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-8">
  <%= paginate @products %>
</div>
