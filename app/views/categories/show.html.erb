<h1 class="text-4xl font-bold mb-8 text-center text-indigo-600"><%= @category.category_name %></h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @products.each do |product| %>
    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <% if product.image.attached? %>
        <%= image_tag product.image, alt: product.product_name, class: "w-full h-48 object-cover" %>
      <% end %>
      <div class="p-6">
        <h2 class="text-xl font-bold text-gray-900 hover:text-indigo-600 transition-colors duration-300"><%= link_to product.product_name, product_path(product) %></h2>
        <p class="text-gray-700 mb-4"><%= product.description %></p>
        <p class="text-lg font-semibold text-gray-900 mb-4"><%= number_to_currency(product.price) %></p>
        <%= form_with url: add_product_cart_path(product_id: product.id), method: :post, local: true do %>
          <%= submit_tag "Add to Cart", class: "w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-black bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

