<h1 class="text-4xl font-bold mb-8 text-center text-indigo-600">Your Orders</h1>

<ul class="space-y-4">
  <% @orders.each do |order| %>
    <li class="bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
      <h2 class="text-2xl font-semibold text-indigo-600 hover:text-indigo-800 transition-colors duration-300">
        <%= link_to "Order ##{order.id}", order_path(order) %>
      </h2>
      <p class="text-gray-700 mt-2"><strong>Status:</strong> <%= order.status %></p>
      <p class="text-gray-700"><strong>Total:</strong> <%= number_to_currency(order.total_price) %></p>
    </li>
  <% end %>
</ul>
