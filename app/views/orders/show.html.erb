<h1>Order #<%= @order.id %></h1>
<ul>
  <% @order.order_items.each do |item| %>
    <li>
      <%= item.product.product_name %> - <%= number_to_currency(item.price) %> x <%= item.quantity %>
    </li>
  <% end %>
</ul>
<p>Total: <%= number_to_currency(@order.total_price) %></p>
<p>Status: <%= @order.status %></p>
